<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000051</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontOptionText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000051</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontBigTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000051</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontSmallLightblue">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#147DD1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontBigLightblue">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#147DD1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsOption">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="SettingsOptionRow">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#147DD1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

</resources>